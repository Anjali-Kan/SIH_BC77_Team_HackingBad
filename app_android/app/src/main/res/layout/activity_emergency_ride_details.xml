<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#051E34"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="#F5810A"
        android:padding="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:text="Emergency Case"
            tools:text="Emergency Case"/>

        <TextView
            android:id="@+id/tvtext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textStyle="bold|italic"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            tools:text="Cardiac arrest"/>

        <TextView
            android:id="@+id/tv_hTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:text="Hospital"
            tools:text="Hospital"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvtext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            tools:text="KEM hospital"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnloc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Patient Loc"
            tools:text="Patient Loc"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnloc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Hospital Loc"
            tools:text="Hospital loc"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_pickedup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textColor="#ffffff"
            android:background="@android:color/holo_green_dark"
            android:text="PICKED UP"/>

    </LinearLayout>

</RelativeLayout>