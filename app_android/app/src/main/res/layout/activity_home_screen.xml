<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/homescreen_gradient_bg">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:scaleX="0.7"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp"
            android:scaleY="0.7"
            android:text="TOUCH ME 2 TESTY TESTY"
            android:id="@+id/tester_butt"
            />

        <ImageView
            android:id="@+id/sos_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/sos_button"></ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="2"
        android:orientation="vertical">
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/hospital_finder_button"
            android:id="@+id/hosp_finder_button"
            >
        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleX="0.7"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp"
            android:scaleY="0.7"
            android:src="@drawable/scheme_finder_btn"
            android:id="@+id/scheme_finder_button"
            >

        </ImageView>

    </LinearLayout>

</LinearLayout>