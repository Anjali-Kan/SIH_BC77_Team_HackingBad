<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:layout_weight="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/sos_button"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:foregroundGravity="center"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/sos_button"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Click for emergency"
            />

    </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="2"
        android:orientation="vertical">
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp"
            android:src="@drawable/hospital_finder_button"
            android:id="@+id/hosp_finder_button"
            >
        </ImageView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleX="0.7"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp"
            android:scaleY="0.7"
            android:src="@drawable/scheme_finder_btn"
            android:id="@+id/scheme_finder_button"
            >

        </ImageView>

    </LinearLayout>

</LinearLayout>